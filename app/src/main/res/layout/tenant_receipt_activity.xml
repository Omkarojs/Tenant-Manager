<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="16dp"
        android:src="@drawable/ic_share" />




    <TextView
        android:id="@+id/textAppName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:padding="10sp"
        android:text="Tenant  Manager"
        android:textColor="@color/purple_700"
        android:textSize="30sp"
        android:textStyle="bold"

        />


    <TextView
        android:id="@+id/textReceiptHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:padding="10sp"
        android:text="Payment Receipt of Rent"
        android:textColor="#515050"
        android:textStyle="bold"
        android:textSize="30sp"


        />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_margin="40dp">

        <!-- Table Heading -->



        <!-- Table Data -->

        <TableRow>



            <TextView
                android:id="@+id/textTenantName"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:text="Tenant Name"
                android:padding="10sp"
                android:textSize="15sp"
                android:layout_weight="10"
                android:textColor="@color/black"
                android:background="@drawable/cell_shape_activity"
                android:gravity="left"
                />



            <TextView
                android:id="@+id/textTenantNameValue"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:text="Tenant NameV"
                android:padding="10sp"
                android:textSize="15sp"
                android:layout_weight="10"
                android:gravity="left"
                android:textColor="@color/black"
                android:background="@drawable/cell_shape_activity"
                />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textRentAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Rent Amount"
                android:padding="10sp"
                android:textSize="15sp"
                android:layout_weight="5"
                android:gravity="left"
                android:textColor="@color/black"
                android:background="@drawable/cell_shape_activity"
                />



            <TextView
                android:id="@+id/textRentAmountValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Rent Amount"
                android:padding="10sp"
                android:textSize="15sp"
                android:layout_weight="5"
                android:gravity="left"
                android:textColor="@color/black"
                android:background="@drawable/cell_shape_activity"
                />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textHouseNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="House Number"
                android:padding="10sp"
                android:textSize="15sp"
                android:layout_weight="5"
                android:gravity="left"
                android:textColor="@color/black"
                android:background="@drawable/cell_shape_activity"
                />


            <TextView
                android:id="@+id/textHouseNumberValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="House Number"
                android:padding="10sp"
                android:textSize="15sp"
                android:layout_weight="5"
                android:gravity="left"
                android:textColor="@color/black"
                android:background="@drawable/cell_shape_activity"
                />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textMobileNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Mobile Number"
                android:padding="10sp"
                android:textSize="15sp"
                android:layout_weight="5"
                android:gravity="left"
                android:textColor="@color/black"
                android:background="@drawable/cell_shape_activity"
                />


            <TextView
                android:id="@+id/textMobileNumberValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Mobile Number"
                android:padding="10sp"
                android:textSize="15sp"
                android:layout_weight="5"
                android:gravity="left"
                android:textColor="@color/black"
                android:background="@drawable/cell_shape_activity"
                />

        </TableRow>
        <TableRow>

            <TextView
                android:id="@+id/textPlace"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Place"
                android:padding="10sp"
                android:textSize="15sp"
                android:layout_weight="5"
                android:gravity="left"
                android:textColor="@color/black"
                android:background="@drawable/cell_shape_activity"
                />


            <TextView
                android:id="@+id/textPlaceValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Place"
                android:padding="10sp"
                android:textSize="15sp"
                android:layout_weight="5"
                android:gravity="left"
                android:textColor="@color/black"
                android:background="@drawable/cell_shape_activity"
                />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@drawable/cell_shape_activity"
                android:gravity="left"
                android:padding="10sp"
                android:text="Date"
                android:textColor="@color/black"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/textDateValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Date"
                android:padding="10sp"
                android:textSize="15sp"
                android:layout_weight="5"
                android:gravity="left"
                android:textColor="@color/black"
                android:background="@drawable/cell_shape_activity"
                />

        </TableRow>

    </TableLayout>

</LinearLayout>
