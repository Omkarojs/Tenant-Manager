<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center">


    <TextView
        android:id="@+id/textTenantName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textColor="#171616"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        tools:text=" Pravin" />

    <TextView
        android:id="@+id/textStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="8dp"
        android:textColor="#218125"
        android:textColorHint="#100F0F"
        android:textSize="20sp"
        tools:text="Status    " />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textTenantName"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textRentAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textStatus"
            android:layout_weight="1.2"
            android:drawableLeft="@drawable/ic_currency_rupee"
            android:padding="5dp"
            android:textColor="#3E3D3D"
            android:textColorHint="@color/black"
            android:textSize="15sp"
            android:textStyle="normal"
            tools:text="  Rent Amount" />

        <ImageView
            android:id="@+id/imgLight"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="-9dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/lightbulb" />


        <TextView
            android:id="@+id/textLightBill"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textRentAmount"
            android:layout_weight="0.6"
            android:padding="5dp"
            android:textColor="#3E3D3D"
            android:textColorHint="@color/black"
            android:textSize="15sp"
            android:textStyle="normal"
            tools:text="  Light Bill" />

        <TextView
            android:id="@+id/textWaterBill"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textLightBill"
            android:layout_weight="0.8"
            android:drawableLeft="@drawable/ic_water"
            android:drawablePadding="2dp"
            android:textColor="#3E3D3D"
            android:textColorHint="@color/black"
            android:textSize="15sp"
            android:textStyle="normal"
            tools:text="  Water Bill" />


        <ImageView
            android:id="@+id/imgCalender"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="-9dp"
            android:padding="13dp"
            android:src="@drawable/calendar" />

        <TextView
            android:id="@+id/textDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textWaterBill"
            android:layout_weight="1.1"
            android:padding="5dp"
            android:textColor="#3E3D3D"
            android:textColorHint="@color/black"
            android:textSize="15sp"
            android:textStyle="normal"
            tools:text="  Date" />

    </LinearLayout>















</RelativeLayout>





